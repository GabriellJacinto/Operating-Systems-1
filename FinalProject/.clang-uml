# Change to directory where compile_commands.json is
compilation_database_dir: .
# Change to directory where diagram should be written
output_directory: docs/diagrams
diagrams:
  class_diagram_concurrency:
    type: class
    glob:
      - src/Concurrency/*.cc
    using_namespace:
        - SOLUTION
    include:
      namespaces:
        - SOLUTION
    exclude:
      namespaces:
        - sf::*
        - std::*
        - List_Elements::*
        - List_Iterators::*
      elements:
      - SOLUTION::List_Elements::Doubly_Linked_Ordered
      - SOLUTION::Debug_Error
      - SOLUTION::Debug_Trace
      - SOLUTION::Debug_Warning
      - SOLUTION::Debug_Info
      - SOLUTION::List_Iterators::Forward
      - SOLUTION::List_Element_Rank

