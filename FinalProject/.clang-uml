# Change to directory where compile_commands.json is
compilation_database_dir: .
# Change to directory where diagram should be written
output_directory: docs/diagrams
diagrams:
  test_class_diagram:
    type: class
    glob:
      - src/*.cc
      - src/Concurrency/*.cc
      - src/Game/Control/*.cc
      - src/Game/Interface/*.cc
      - src/Game/Logic/*.cc
    using_namespace:
      - SOLUTION
    include:
      namespaces:
        - SOLUTION
  test_sequence:
      type: sequence
      glob:
        - src/*.cc
        - src/Concurrency/*.cc
        - src/Game/Control/*.cc
        - src/Game/Interface/*.cc
        - src/Game/Logic/*.cc
      include:
        namespaces:
          - SOLUTION
      using_namespace:
        - SOLUTION
      start_from:
        - function: "SOLUTION::main(void)"